@model PTC.Application.Dtos.MensagemViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            @if (Model.StatusSucesso)
            {
                <h5 class="modal-title color-true">@Model.Titulo</h5>
            }
            else
            {
                <h5 class="modal-title color-true">@Model.Titulo</h5>
            }
            <span type="button" class="close span-close-modal" data-bs-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </span>
        </div>
        <div class="modal-body">
            <fieldset>
                <legend class="font-bold">Resposta da Solicitação</legend>
                <hr />
                <br />
                <span>@Model.Mensagem</span>
            </fieldset>
        </div>
        <div class="modal-footer">
            <div class="row">
                @if (Model.StatusSucesso)
                {
                    <div class="col-12 text-right">
                        <a class="btn btn-lg btn-success" href="@Url.Action(Model.ControllerAction, Model.Controller)">Ok</a>
                    </div>
                }
                else if (Model.Trava)
                {
                    <div class="col-12 text-right">
                        <button id="btnDelete" onclick="DeletarRecurso()" class="btn btn-lg btn-danger" data-id="@Model.ModelId">Continuar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.Trava)
{
        <script type="text/javascript">

            function DeletarRecurso() {
                let url = "@Model.Controller" + "/" + "@Model.ControllerAction" + "/" + "@Model.ModelId";
                console.log(url);
                fetch( "@Model.ControllerAction" + "/" + "@Model.ModelId", {
                    method: 'DELETE',
                }).then(function (serverPromise) {
                    serverPromise.text()
                        .then(function (j) {
                            if (j.toString().toLowerCase().includes("sucesso")) {
                                return ModalMensagem('Sucesso', j.toString(), aspController, aspAction, true, true);
                            } else {
                                    return ModalMensagem('Falha', j.toString(), aspController, aspAction, false, false);
                            }
                        })
                        .catch(function (e) {
                            return ModalMensagem('Falha', j.toString(), aspController, aspAction, false, false);
                         });
                });
            }
        </script>
}